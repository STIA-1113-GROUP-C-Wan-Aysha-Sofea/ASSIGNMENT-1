package calculation;
import java.util.Scanner;
public class Calculation {
	public static void line(){
		 int line=1;
		 while(line<=80){
		 System.out.printf("%c",45);
		 line++; 
		        }
	 }
		public static void dot(){
			 int dot=1;
			 while(dot<=80){
			 System.out.print("-");
			 dot++; 
			        }
	 }
	public static void main(String[] args) {
		// TODO Auto-generated method stub
